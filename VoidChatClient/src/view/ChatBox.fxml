<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="chatBox" prefHeight="351.0" prefWidth="400.0" style="-fx-background-color: #535f85;" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ChatBoxController">
    <children>
      <ListView fx:id="listviewChat" prefHeight="305.0" prefWidth="390.0" stylesheets="@../resouces/chatBoxStyles.css">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin></ListView>
        <HBox prefHeight="40.0" prefWidth="400.0">
            <children>
                <TextField fx:id="txtFieldMsg" prefHeight="27.0" prefWidth="293.0">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets left="5.0" top="5.0" />
                    </HBox.margin>
                </TextField>
                <Button fx:id="btnSendAttach" mnemonicParsing="false" onAction="#btnSendAttachAction" prefHeight="27.0" prefWidth="35.0">
                    <graphic>
                        <ImageView fitHeight="14.0" fitWidth="15.0" layoutX="-2.0">
                            <image>
                                <Image fx:id="clips" url="@../resouces/clips.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets left="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="btnSendMsg" mnemonicParsing="false" onAction="#btnSendMsgAction" prefHeight="27.0" prefWidth="50.0" text="Send">
                    <HBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
